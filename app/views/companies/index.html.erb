<h1>All the Companies</h1>

<%= link_to "New Company", new_company_path %>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Country</th>
      <th></th>
      <th></th>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
    <tr>
      <td><%= company.id %></td>
      <td><%= company.name %></td>
      <td><%= company.country %></td>
      <td><%= link_to "Show", company %></td>
      <td><%= link_to "Edit", edit_company_path(game) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
